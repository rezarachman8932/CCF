<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/colorButtonPressed" />
            <gradient android:angle="-90" android:startColor="@color/colorButtonPressed" android:endColor="@color/colorButtonPressed" />
        </shape>
    </item>
    <item android:state_first="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/colorButtonPink" />
            <solid android:color="@color/colorButtonPink"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/colorButtonPink" />
            <gradient android:angle="-90" android:startColor="@color/colorButtonPink" android:endColor="@color/colorButtonPink" />
        </shape>
    </item>
</selector>