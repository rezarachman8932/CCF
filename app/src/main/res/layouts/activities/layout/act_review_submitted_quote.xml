<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"
        android:text="@string/sub_header_proposal_details"
        android:textStyle="bold"
        android:textColor="@color/colorButtonBlue" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/sub_header_submit_proposal_for"
        android:textStyle="bold"
        android:textColor="@color/colorButtonBlue"/>
    <TextView
        android:id="@+id/text_submitted_quote_id"
        android:layout_marginTop="10dp"
        android:text="@string/label_quote_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/text_submitted_job_type"
        android:text="PLANT HIRE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/text_submitted_equipment_type_and_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Excavators - 2 units"/>
    <TextView
        android:id="@+id/text_submitted_date_and_duration"
        android:text="22 December 2015 for 5 days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/text_submitted_time"
        android:text="6:00 AM start time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="@string/label_location_address"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorButtonBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/text_submitted_location_address"
        android:text="Melbourne CBD Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/text_submitted_proposed_cost"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/holo_red_dark"
        android:text="Proposed cost : $200000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="@string/label_send_proposal_to"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorButtonBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/text_submitted_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLACK ROAD PTY LTD" />
    <TextView
        android:id="@+id/text_submitted_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Doe" />
    <TextView
        android:id="@+id/text_submitted_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="john.doe@black.com.au" />
    <TextView
        android:id="@+id/text_submitted_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0523343 3232 3232" />
    <Button
        android:id="@+id/button_submitted_confirm_proposal"
        android:background="@drawable/rounded_blue"
        android:text="@string/button_request_detail_confirm"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/button_submitted_edit_proposal"
        android:background="@drawable/rounded_pink"
        android:text="@string/button_request_detail_edit"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>