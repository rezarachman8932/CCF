<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">
    <RelativeLayout
        android:id="@+id/row_type_quote_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/job_equipment_quantity"
            android:textColor="@color/colorButtonBlue"
            android:text="PLANT HIRE - Excavators - 2 units"
            android:maxLines="5"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/quote_id"
            android:textColor="@android:color/black"
            android:text="Quote ID : 1371"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:id="@+id/quote_time_duration"
        android:textColor="@android:color/black"
        android:text="22 December 2015 for 5 days"
        android:layout_below="@id/row_type_quote_id"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/proposal_status"
        android:textColor="@android:color/holo_red_dark"
        android:layout_below="@id/quote_time_duration"
        android:layout_marginTop="5dp"
        android:text="Number of received proposal(s) : 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>